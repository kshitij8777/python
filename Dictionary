class Employee():
    def _init_(self):
        self.d = {}

    def input(self):
        self.name = input("Enter the name of the Employee\n")
        self.address = input("Enter the address of the employee\n")
        self.pan = input("Enter the Pan number of the employee\n")
        self.bs = int(input("Enter the basic salary of the employee\n"))
        self.tds = int(input("Enter the TDS of the employee\n"))
        self.deduct = int(input("Enter the deduction amount\n"))
        self.hra = 1.25 * self.bs
        self.da = 0.25 * self.bs
        self.gross = self.bs + self.hra + self.da
        self.net = self.gross - self.deduct
        self.update()

    def update(self):
        self.d[self.name] = {
            "Name": self.name,
            "Address": self.address,
            "Pan": self.pan,
            "Basic Salary": self.bs,
            "TDS": self.tds,
            "Deductions": self.deduct,
            "HRA": self.hra,
            "DA": self.da,
            "Gross Salary": self.gross,
            "Net Salary": self.net
        }

    def search(self, name):
        if name in self.d:
            print("Employee Found")
            print(name, self.d[name])
        else:
            print("Employee not found")

    def update_emp(self, name):
        if name in self.d:
            print("Update employee details for:", name)
            self.input()
        else:
            print("Employee not found")

    def printemp(self):
        for key, value in self.d.items():
            print(key, value)


emp = Employee()
while True:
    ch = int(input("1. Enter the Employee Details\n2. Search For the Employee\n3. Update Employee Details\n4. Display all Employees\n5. Exit\n"))
    if ch == 1:
        emp.input()
    elif ch == 2:
        name = input("Enter the name to be searched\n")
        emp.search(name)
    elif ch == 3:
        name = input("Enter the name of the employee to update\n")
        emp.update_emp(name)
    elif ch == 4:
        emp.printemp()
    elif ch == 5:
        print("Exiting...")
        break
    else:
        print("Invalid choice")
